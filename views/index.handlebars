<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Eat-Da-Burger</h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col">
      <h2>Burgers that have been ordered</h2>
      <ul>
          {{#each burger}}
          {{#unless devoured}}
          {{>burger/burger-block devoured=true}}
          {{/unless}}
          {{/each}}
        </ul>
    </div>
    <div class="col">
      <h2>Devoured Burgers</h2>
     <ul>
          {{#each burger}}
          {{#unless devoured}}
          {{>burger/burger-block devoured=false}}
          {{/unless}}
          {{/each}}
        </ul>
    </div>
  </div>
  <div class="row">
    <div class="col">
      
    </div>
    <div class="col">
      <form>
        <div class="form-group">
          <label for="burgerName"></label>
          <input type="text" class="form-input" id="burgerName">
          <small id="burger" class="form-text text-muted">Enter a burger you want to eat and Click the "Order" button</small>
        </div>
        <button type="submit" class="btn btn-info">Order</button>
      </form>
    </div>
    <div class="col">
      
    </div>
  </div>
</div>


