<div class="jumbotron jumbotron-fluid" id="welcome">
  <div class="container">
    <h1 class="display-4">Eat-Da-Burger</h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col" id="orders">
      <h2>Burgers that have been ordered</h2>
      <ul>
          {{#each burgers}}
          {{#unless devoured}}
          {{>burgers/burger-block devoured=true}}
          {{/unless}}
          {{/each}}
        </ul>
    </div>
    <div class="col" id="devour">
      <h2>Devoured Burgers</h2>
     <ul>
          {{#each burgers}}
          {{#if devoured}}
          {{>burgers/burger-block devoured=false}}
          {{/if}}
          {{/each}}
        </ul>
    </div>
  </div>
  <div class="row">
    <div class="col">
      
    </div>
    <div class="col">
      <form>
        <div class="form-group">
          <label for="ca"></label>
          <input type="text" class="form-input" id="ca" name="name">
          <small id="burger" class="form-text text-muted">Enter a burger you want to eat and Click the "Order" button</small>
          <br> 
          <button type="submit" class="btn btn-info">Order</button>
        </div>
       
      </form>
    </div>
    <div class="col">
      
    </div>
  </div>
</div>


